        title=pageName
    body
        form(name="searchbook", action="/books/search", method="post")
            span Search
            input(type="text", name="criteria")
            input(type="submit", value="Search")

        ul#books
            for book in books
                if book.available
                    li #{book.id} - #{book.name} for Â£ #{book.price}


        p
            strong Add a book
        form(name="addbook", action="/books", method="post")
            div
                span name
                input(type="text", name="name")
            div
                span price
                input(type="text", name="price")
            div
                span available
                input(type="checkbox", checked, name="available")
            div
                input(type="submit", value="Add book")
