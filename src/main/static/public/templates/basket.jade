            p: a(href="/") Home

        p: strong Your basket - #{basket_count} item(s)

        div
            ul#basket
                for book in basket
                    li
                        | #{book.id} -
                        a(href="/books/#{book.id}")=book.name
                        =' '
                        | for Â£ #{book.price}
                        =' '
                        form(action="/basket/delete", method="post")
